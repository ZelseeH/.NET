@model ChampionsLeagueMaster.ViewModels.Teams.TeamCreateEditViewModel

@{
    ViewData["Title"] = "Create Team";
}

<h1>Create Team</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FoundedAt" class="control-label"></label>
                <input asp-for="FoundedAt" class="form-control" type="number" min="1000" max="2050" />
                <span asp-validation-for="FoundedAt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Stwórz" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Wróć</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
