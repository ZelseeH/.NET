@model ChampionsLeagueMaster.ViewModels.Teams.TeamViewModel

@{
    ViewData["Title"] = "Szczegóły Zespołu";
}

<div class="container py-4">
    <h1 class="text-center mb-4 display-5 fw-bold text-primary">Szczegóły Zespołu</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nazwa Zespołu</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">Kraj Pochodzenia</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Country)</dd>

                <dt class="col-sm-3">Rok założenia</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FoundedAt)</dd>

            </dl>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edytuj</a>
                <a asp-action="Index" class="btn btn-secondary">Wróć</a>
            </div>
        </div>
    </div>
</div>
