@model ChampionsLeagueMaster.ViewModels.Teams.TeamCreateEditViewModel

@{
    ViewData["Title"] = "Edytuj Zespół";
}

<div class="container py-4">
    <h1 class="text-center mb-4 display-5 fw-bold text-primary">Edytuj Zespół</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" required minlength="2" maxlength="100" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Country" class="form-label fw-bold"></label>
                    <input asp-for="Country" class="form-control" required minlength="2" maxlength="60" pattern="^[A-Za-zÀ-ÖØ-öø-ÿ\s-]+$" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FoundedAt" class="form-label fw-bold"></label>
                    <input asp-for="FoundedAt" class="form-control" type="number" required min="1800" max="2025" />
                    <span asp-validation-for="FoundedAt" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">Zapisz</button>
                    <a asp-action="Index" class="btn btn-secondary">Wróć</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}