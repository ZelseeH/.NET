@model ChampionsLeagueMaster.Models.Result

@{
    ViewData["Title"] = "Dodaj wynik";
}

<div class="container mt-4">
    <h2 class="text-center text-primary">Dodaj nowy wynik</h2>
    <div class="card shadow-sm mt-3">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Season" class="form-label fw-bold">Sezon</label>
                    <input asp-for="Season" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label asp-for="Round" class="form-label fw-bold">Kolejka</label>
                    <input asp-for="Round" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label asp-for="HomeTeamId" class="form-label fw-bold">Gospodarz</label>
                    <select asp-for="HomeTeamId" asp-items="@(ViewBag.Teams as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>())" class="form-select" required>
                        <option value="">Wybierz drużynę</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label asp-for="AwayTeamId" class="form-label fw-bold">Goście</label>
                    <select asp-for="AwayTeamId" asp-items="@(ViewBag.Teams as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>())" class="form-select" required>
                        <option value="">Wybierz drużynę</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label asp-for="HomeTeamGoals" class="form-label fw-bold">Wynik Gospodarzy</label>
                    <input asp-for="HomeTeamGoals" type="number" class="form-control" min="0" required />
                </div>
                <div class="mb-3">
                    <label asp-for="AwayTeamGoals" class="form-label fw-bold">Wynik Gości</label>
                    <input asp-for="AwayTeamGoals" type="number" class="form-control" min="0" required />
                </div>
                <div class="mb-3">
                    <label asp-for="MatchDay" class="form-label fw-bold">Data meczu</label>
                    <input asp-for="MatchDay" type="date" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label asp-for="MatchTime" class="form-label fw-bold">Godzina meczu</label>
                    <input asp-for="MatchTime" type="time" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label asp-for="Status" class="form-label fw-bold">Status</label>
                    <input asp-for="Status" class="form-control" />
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Zapisz</button>
                    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div>
